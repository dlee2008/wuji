{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-focus",
    "core:window:allow-show",
    "core:window:allow-close",
    "shell:allow-open",
    "shell:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*"
        },
        {
          "url": "http://*"
        }
      ]
    },
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-delete",
    "store:allow-clear",
    "store:allow-entries",
    "store:allow-has",
    "store:allow-length",
    "store:allow-reset",
    "sql:default",
    "sql:allow-load",
    "sql:allow-close",
    "sql:allow-execute",
    "sql:allow-select",
    "fetch-plugin:default",
    "os:default",
    "core:window:allow-set-min-size",
    "core:window:allow-destroy",
    "core:window:allow-hide",
    "core:window:allow-get-all-windows",
    "commands:default",
    "log:allow-log",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-open",
    "fs:allow-write",
    "fs:allow-write-text-file",
    "fs:allow-read",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:scope-download-recursive",
    "fs:scope-resource-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$PICTURE/**"
        }
      ],
      "deny": [
        "$APPDATA/db/*.stronghold"
      ]
    }
  ]
}
